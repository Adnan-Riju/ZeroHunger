@model IEnumerable<ZeroHungerAssignment.EF.Request>

@{
    ViewBag.Title = "Index";
}

<h2>NGO</h2>


<a class="btn btn-danger" href="/NGO/History">History</a>

<a class="btn btn-warning" href="/NGO/logout">Logout</a>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.R_Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.R_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IteamName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AssignEmployee)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RestaurantId)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.R_Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.R_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IteamName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RestaurantId)
            </td>
            <td>
                @Html.ActionLink("Confirm", "Edit", new { id = item.R_Id/* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Cancel", "CancelProduct", new { id = item.R_Id /* id=item.PrimaryKey */ })
            </td>
        </tr>
    }

</table>
